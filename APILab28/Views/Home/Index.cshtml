@{
    ViewBag.Title = "Home Page";
}
@if (ViewBag.Error != null)
{
    <div>
        <h2>Error: Status @ViewBag.Error</h2>
        @ViewBag.ErrorDescription
        <br />
        @ViewBag.Data
    </div>
}
else
{
    <h2>Deck of Cards</h2>
    <div>
        <button onclick="DrawFive()">DRAW FIVE</button>

        <table class="table table-bordered table-striped">
            <tr>
                <th width="15%">KeepOrDraw</th>
                <th width="15%">Value</th>
                <th width="15%">Suit</th>
                <th width="35%">Card</th>

            </tr>
            @for (int i = 0; i < ViewBag.Cards.Count; i++)
             {
            <tr>
                <td>
                    <select>
                        <option value="draw">Draw</option>
                        <option value="keep">Keep</option>
                    </select>
                </td>
                <td>@ViewBag.Cards[i].suit</td>
                <td>@ViewBag.Cards[i].value</td>

                <td>
                    <img src="@ViewBag.Cards[i].image"
                         height="120" width="120" />
                </td>

            </tr>
             }
        </table>

        <script>
          function DrawFive(@ViewBag.DeckID)
          {
              location.reload();
          }
        </script>
    </div>

}
